<view class="container"><view class="line">验证现有密码</view><view class="list"><input class="code" type="number" password="{{true}}" placeholder="请输入现有密码" data-event-opts="{{[['input',[['getPassword',['$event']]]]]}}" value="{{password}}" bindinput="__e"/></view><view class="set">设置新密码</view><view class="list"><view class="title">交易密码:</view><input class="code" type="digit" password="{{isPassword}}" placeholder="请输入新的交易密码" data-event-opts="{{[['input',[['getNewPassword',['$event']]]],['blur',[['checkPwd',['$event']]]]]}}" value="{{newPassword}}" bindinput="__e" bindblur="__e"/><image class="{{[isPassword?'close':'cloose']}}" src="{{isPassword?'../../static/image/password.png':'../../static/image/openeye.png'}}" mode data-event-opts="{{[['tap',[['show',['$event']]]]]}}" bindtap="__e"></image></view><view class="linee"></view><view class="list"><view class="title">确认密码:</view><input class="code" type="digit" password="{{isPassword1}}" placeholder="请再次输入新密码" data-event-opts="{{[['input',[['getNewPassword1',['$event']]]]]}}" value="{{newPassword1}}" bindinput="__e"/><image class="{{[isPassword1?'close':'cloose']}}" src="{{isPassword1?'../../static/image/password.png':'../../static/image/openeye.png'}}" mode data-event-opts="{{[['tap',[['show1',['$event']]]]]}}" bindtap="__e"></image></view><view class="submit-btn-wrap"><block wx:if="{{allowLogin}}"><view class="submit-btn" hover-class="active" data-event-opts="{{[['tap',[['changePassword',['$event']]]]]}}" bindtap="__e">确认修改</view></block><block wx:else><view class="submit-btn-disable">确认修改</view></block></view><view data-event-opts="{{[['tap',[['other',['$event']]]]]}}" class="other" bindtap="__e">找回密码</view></view>