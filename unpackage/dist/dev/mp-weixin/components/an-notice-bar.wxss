
.swiper {
	height: 40rpx !important;
}
.an-notice-box {
	width: 100%;
	height: 40rpx;
	padding: 0;
	overflow: hidden;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.an-notice-icon {
	width: 40rpx;
	height: 40rpx;
	line-height: 30rpx;
	text-align: center;
	position: relative;
}
.an-notice-content {
	width: calc(100% - 100rpx);
	position: relative;
	font-size: 14px;
	margin-left: 20rpx;
}
.an-notice-content-item {
	width: 100%;
	height: 40rpx;
	text-align: left;
	line-height: 40rpx;
}
.an-notice-content-item-text {
	display: block;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.an-notice-more {
	width: 130rpx;
	height: 40rpx;
	font-size: 14px;
	line-height: 40rpx;
	text-align: right;
	color: #999;
}
@-webkit-keyframes anotice {
0% {
		-webkit-transform: translateY(100%);
		        transform: translateY(100%);
}
30% {
		-webkit-transform: translateY(0);
		        transform: translateY(0);
}
70% {
		-webkit-transform: translateY(0);
		        transform: translateY(0);
}
100% {
		-webkit-transform: translateY(-100%);
		        transform: translateY(-100%);
}
}
@keyframes anotice {
0% {
		-webkit-transform: translateY(100%);
		        transform: translateY(100%);
}
30% {
		-webkit-transform: translateY(0);
		        transform: translateY(0);
}
70% {
		-webkit-transform: translateY(0);
		        transform: translateY(0);
}
100% {
		-webkit-transform: translateY(-100%);
		        transform: translateY(-100%);
}
}

